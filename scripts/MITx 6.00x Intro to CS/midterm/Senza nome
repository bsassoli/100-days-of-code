def general_poly(L):
    """ L, a list of numbers (n0, n1, n2, ... nk)
    Returns a function, which when applied to a value x, returns the value
    n0 * x^k + n1 * x^(k-1) + ... nk * x^0 """
    # YOUR CODE HERE
    poly=[]
    def this(x):
        power = 1
        stop=len(L)
        for coeff in L:
            poly.append(coeff*(x**(stop-power)))
            power+=1
        return sum(poly)
    return this

print(general_poly([1])(0))
